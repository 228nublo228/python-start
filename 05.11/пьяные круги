x = 0
y = 0
x = 0
y = 0
x1 = 0
y1 = 0
x2 = 0
y2 = 0


def setup():
    global x,y,x1,y1,x2,y2
    x = 0
    y = 0
    x1 = 40
    y1 = 40
    x2 = 5
    y2 = 5
    size(1600,800)
    frameRate(50)
    
def draw():
    global x,y,x1,y1,x2,y2
    x1 = random(0,800)
    y1 = random(0,400)
    fill(random(0,255),random(0,255),random(0,255))
    background(155)
    ellipse(x,y,x1,y1)
    x = x + x2
    y = y + y2

    
