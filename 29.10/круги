x = 0
y = 0
x2 = 0
y2 = 0


def setup():

    global x,y,x2,y2
    
    size(1600,800)
    
    frameRate(100)
    
    background(255)
    
def draw():
    
    global x,y,x2,y2
    
    x = random(0,0)
    y = random(0,0)
    x2 = random(0,0)
    y2 = random(0,0)
    
    background(200)
    
    translate(700,350)
    
    ellipse(x,y,x2,y2) 
